{{! 标签云 }}
<div class="card-tags card">
	<div class="card-custom-title">
		<span class="card-title green-text text-darken-2">标签云<i class="material-icons tag-icon">turned_in</i></span>
	</div>
	<div class="card-action">
		<div class="tags">
			{{#foreach tags}}
			<a href="{{url}}" class="chip waves-effect waves-red" target="_blank">{{name}}</a>
			{{/foreach}}
		</div>
	</div>
</div>
